{
  "extends": "./tsconfig.basic.json",
  "include": [ 
    "../../src/renderer/**/*.ts",
    "../../src/renderer/**/*.js",
    "../../src/renderer/**/*.vue",
    "../../src/**/*.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": "../../",
    "composite": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
  }
}